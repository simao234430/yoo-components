{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "jsx": "react",
    "target": "ESNext",
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@simao234430/yoo-components": ["packages/components/src/index.tsx"],
    }
  },
  "include": ["packages/components/src/**/*.ts", "packages/components/src/**/*.tsx"],
  "exclude": ["node_modules", "build"] // *** 不进行类型检查的文件 ***}
}
